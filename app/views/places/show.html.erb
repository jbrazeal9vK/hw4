<div class="container mt-3">
  <div class="row">
    <div class="col-sm-9">
      <h1><%= @place["name"] %></h1> 
    </div>
    <div class="col-sm-3 text-end">
      <% if @current_user != nil %>
        <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
      <% end %>
    </div>
  </div>
</div>

<% if @current_user != nil %>
  <h2>My Posts</h2>
  <% for post in @posts %>
    <h3><%= post["title"] %></h3>
    <h4><%= post["posted_on"] %></h4>
    <p><%= post["description"] %></p>
    <p>
      <% if post.image.attached? %>
        <img src="<%= url_for(post.image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>
  <% end %>

<% else %>
  Login to see your posts!


<% end %>
<p>
  <a href="/places">Back to All Places</a>
</p>